<Page x:Class="FDS.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FDS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Canvas Background="Azure">
        <Label Content="Login" Canvas.Left="193" Canvas.Top="150"/>
        <Label   Content="Password" Canvas.Left="193" Canvas.Top="243" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="login"   Canvas.Left="193" TextWrapping="Wrap" Canvas.Top="198" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <PasswordBox x:Name="password"   Canvas.Left="193" Canvas.Top="293" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="enter"    Content="Вход" Canvas.Left="193" Canvas.Top="343" Click="enter_Click"/>
        <Button x:Name="regin"   Content="Регистрация" Canvas.Left="321" Canvas.Top="343" Click="regin_Click"/>


    </Canvas>
</Page>
